<?xml version="1.0" encoding="utf-8"?>
<preset name="jni-linux" comment="Linux clang PhysX JNI wrapper general settings">
  <platform targetPlatform="jni-linux" compiler="clang" />
  <CMakeSwitches>
    <cmakeSwitch name="PX_BUILDSNIPPETS" value="False" comment="Generate the snippets" />
    <cmakeSwitch name="PX_BUILDPVDRUNTIME" value="False" comment="Generate the OmniPVD project" />
    <cmakeSwitch name="PX_GENERATE_STATIC_LIBRARIES" value="True" comment="Generate static libs" />    
  </CMakeSwitches>
  <CMakeParams>
    <cmakeParam name="CMAKE_INSTALL_PREFIX" value="install/jni-linux/PhysX" comment="Install path relative to PhysX SDK root" />
  </CMakeParams>
</preset>